<%- include("partials/header")-%>
<div class=" container">
  <div class="cancelbox">
    <div class="card">
      <div class="card-body">

        <form action="/cancel" method="POST">
          <h4>Enter your email-Id to cancel the order</h4>

          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control"  name="Email" placeholder="Email">
          </div>
          <div class="form-group">
            <label for="phone">Phone</label>
            <input type="Number" class="form-control"  name="Phone" placeholder="Phone">
          </div>

                    <div class="form-group">
                      <label for="ordername">Order name and quantity</label>
                      <input type="text" class="form-control"  name="ordername" placeholder="OrderName">
                    </div>
          <p>Are you sure you want to cancel your order?</p>
          <button type="submit" class="btn btn-dark">Cancel Order</button>
<p class="pc">Please give us the reason for your cancellation in the review section</p>
        </form>
      </div>
    </div>

  </div>

